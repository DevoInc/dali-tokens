{
  "cmp": {
    "inputControl": {
      "pseudoCalendar": {
        "color": {
          "background": {
            "hovered": {
              "value": "{cmp.button.color.background.neutral.enabled.value}"
            }
          }
        },
        "mutation": {
          "transitionDuration": {
            "value": "{cmp.button.mutation.transitionDuration.value}"
          }
        },
        "shape": {
          "borderRadius": {
            "value": "{cmp.button.shape.borderRadius.full.value}"
          },
          "backgroundSize": {
            "sm": {
              "value": "calc({cmp.button.size.square.xxs.value} + 0.2rem)"
            },
            "md": {
              "value": "calc({cmp.button.size.square.xs.value} + 0.2rem)"
            },
            "lg": {
              "value": "calc({cmp.button.size.square.sm.value} + 0.2rem)"
            }
          },
          "backgroundImage": {
            "picker": {
              "value": "{alias.fields.shape.backgroundImage.date.value}"
            },
            "timePicker": {
              "value": "{alias.fields.shape.backgroundImage.time.value}"
            }
          }
        },
        "size": {
          "square": {
            "sm": {
              "value": "{cmp.button.size.square.xxs.value}"
            },
            "md": {
              "value": "{cmp.button.size.square.xs.value}"
            },
            "lg": {
              "value": "{cmp.button.size.square.sm.value}"
            }
          }
        },
        "space": {
          "padding": {
            "sm": {
              "value": "0"
            },
            "md": {
              "value": "0"
            },
            "lg": {
              "value": "0"
            }
          },
          "offset": {
            "sm": {
              "value": "{cmp.inputControl.space.padding.hor.sm.value}"
            },
            "md": {
              "value": "{cmp.inputControl.space.padding.hor.md.value}"
            },
            "lg": {
              "value": "{cmp.inputControl.space.padding.hor.lg.value}"
            }
          }
        }
      }
    }
  }
}
