{
  "cmp": {
    "select": {
      "indicator": {
        "size": {
          "width": {
            "sm": {
              "value": "calc({cmp.button.size.square.sm.value} - {alias.space.cmp.xxs.value})"
            },
            "md": {
              "value": "calc({cmp.button.size.square.md.value} - {alias.space.cmp.xxs.value})"
            },
            "lg": {
              "value": "calc({cmp.button.size.square.lg.value} - {alias.space.cmp.xxs.value})"
            }
          }
        },
        "space": {
          "padding": {
            "value": "0"
          }
        },
        "mutation": {
          "transitionDuration": {
            "value": "transform ease-in-out {alias.mutation.transitionDuration.rotation.180.value}"
          }
        }
      }
    }
  }
}
