{
  "cmp": {
    "notification": {
      "item": {
        "shape": {
          "border": {
            "base": {
              "value": "solid {alias.shape.borderSize.separator.md.value} {alias.color.border.separator.base.base.value}"
            }
          }
        }
      },
      "icon": {
        "color": {
          "background": {
            "value": "{alias.color.background.surface.base.featured.value}"
          },
          "text": {
            "value": "{alias.color.text.body.base.value}"
          }
        },
        "typo": {
          "fontSize": {
            "value": "{alias.typo.fontSize.icon.md.value}"
          }
        }
      },
      "headerIcon": {
        "color": {
          "background": {
            "success": {
              "value": "{alias.color.background.feedback.success.strong.value}"
            },
            "info": {
              "value": "{alias.color.background.feedback.info.strong.value}"
            },
            "warning": {
              "value": "{alias.color.background.feedback.warning.strong.value}"
            },
            "error": {
              "value": "{alias.color.background.feedback.error.strong.value}"
            }
          }
        },
        "typo": {
          "fontSize": {
            "value": "{alias.typo.fontSize.icon.xxs.value}"
          }
        }
      }
    }
  }
}
