{
  "cmp": {
    "mainMenu": {
      "secondaryItem": {
        "mutation": {
          "transition": {
            "value": "{alias.mutation.transitionDuration.action.value} background-color ease"
          }
        },
        "size": {
          "height": {
            "value": "{alias.size.height.action.md.value}"
          }
        },
        "typo": {
          "lineHeight": {
            "value": "{cmp.mainMenu.secondaryItem.size.height.value}",
            "comment": "same value as list item height: {cmp.mainMenu.secondaryItem.size.height.value}"
          }
        },
        "shape": {
          "border": {
            "enabled": {
              "value": "solid {alias.shape.borderSize.separator.md.value} {alias.color.border.separator.inverse.weaker.value}"
            },
            "activated": {
              "value": "solid {alias.shape.borderSize.separator.md.value} {alias.color.border.separator.inverse.base.value}"
            }
          }
        },
        "color": {
          "background": {
            "value": "{alias.color.background.surface.inverse.base.value}"
          },
          "text": {
            "value": "{alias.color.text.body.inverse.value}"
          }
        }
      }
    }
  }
}
