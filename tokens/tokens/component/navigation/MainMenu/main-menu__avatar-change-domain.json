{
  "cmp": {
    "mainMenu": {
      "avatarChangeDomain": {
        "mutation": {
          "transitionDuration": {
            "value": "all {alias.mutation.transitionDuration.action.value} ease"
          }
        },
        "shape": {
          "border": {
            "enabled": {
              "value": "solid {alias.fields.shape.borderSize.base.value} {alias.color.border.surface.inverse.base.value}"
            },
            "hovered": {
              "value": "solid {alias.fields.shape.borderSize.base.value} {alias.color.border.surface.primary.base.value}"
            }
          },
          "borderRadius": {
            "value": "{alias.shape.borderRadius.lg.value}"
          }
        },
        "size": {
          "width": {
            "value": "36px"
          },
          "height": {
            "value": "calc({alias.size.height.action.lg.value} + 0.1rem)"
          }
        },
        "typo": {
          "fontSize": {
            "value": "{alias.typo.fontSize.icon.sm.value}"
          }
        }
      }
    }
  }
}
