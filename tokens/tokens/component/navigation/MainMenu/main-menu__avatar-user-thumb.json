{
  "cmp": {
    "mainMenu": {
      "avatarUserThumb": {
        "shape": {
          "borderRadius": {
            "value": "{alias.shape.borderRadius.full.value}"
          },
          "border": {
            "value": "{alias.shape.borderSize.separator.xl.value}"
          }
        },
        "space": {
          "value": "calc(({cmp.mainMenu.size.width.collapsed.value} - {cmp.mainMenu.avatarUserThumb.size.square.value}) / 2)"
        },
        "size": {
          "square": {
            "value": "{alias.size.square.thumb.xs.value}"
          }
        },
        "color": {
          "background": {
            "base": {
              "value": "{alias.color.background.action.info.enabled.value}"
            }
          },
          "border": {
            "value": "{alias.color.border.separator.inverse.base.value}"
          },
          "text": {
            "base": {
              "value": "{alias.color.text.action.info.enabled.value}"
            }
          }
        }
      }
    }
  }
}
