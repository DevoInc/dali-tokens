  "author": "Devo Dev Team",
  "license": "MIT",
  "description": "Design tokens generator",
  "main": "dist/index",
  "types": "dist/index",
  "scripts": {
    "clean": "rm -rf dist && rm -rf .cache",
    "build": "rollup -c rollup.config.ts --configPlugin typescript",
