{
  "cmp": {
    "mainMenu": {
      "searchItem": {
        "mutation": {
          "transition": {
            "value": "transform {alias.mutation.transitionDuration.translation.hor.md.value} ease-out"
          }
        },
        "size": {
          "width": {
            "value": "calc({cmp.mainMenu.size.width.expanded.value} + {cmp.mainMenu.size.width.collapsed.value})"
          },
          "height": {
            "value": "{alias.size.height.action.sm.value}"
          }
        },
        "typo": {
          "lineHeight": {
            "value": "{cmp.mainMenu.searchItem.size.height.value}"
          },
          "fontSize": {
            "value": "{alias.typo.fontSize.action.md.value}"
          }
        },
        "shape": {
          "border": {
            "value": "dashed {alias.shape.borderSize.separator.md.value} {alias.color.border.separator.inverse.weaker.value}"
          }
        }
      }
    }
  }
}
